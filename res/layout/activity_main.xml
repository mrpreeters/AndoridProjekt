<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pritta.vote4song.MainActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/prikazStatistike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/stats"
            android:minHeight="200px"
            android:minWidth="200px"
            android:onClick="prikaziStatistiko" />

        <ImageButton
            android:id="@+id/QRScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/prikazStatistike"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:background="@drawable/camera"
            android:minHeight="200px"
            android:minWidth="200px"
            android:onClick="QRScan"
            android:src="@android:drawable/btn_star" />

        <ImageButton
            android:id="@+id/prikaziList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/list_button"
            android:onClick="prikaziList"
             />
       
    </RelativeLayout>

</FrameLayout>

