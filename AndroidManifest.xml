<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pritta.vote4song"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:name="com.pritta.vote4song.ControlApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pritta.vote4song.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pritta.vote4song.SingliList"
            android:label="@string/title_activity_singli_list" >
        </activity>
        <activity
            android:name="com.pritta.vote4song.ZajemQRActivity"
            android:label="@string/title_activity_zajem_qr" >
        </activity>
        <activity
            android:name="com.pritta.vote4song.SingliVoteActivity"
            android:label="@string/title_activity_singli_vote" >
        </activity>
        <activity
            android:name="com.pritta.vote4song.StatistikaActivity"
            android:label="@string/title_activity_statistika" >
        </activity>
        <activity
            android:name="com.pritta.vote4song.ListActivity"
            android:label="@string/title_activity_list" >
        </activity>
    </application>

</manifest>
